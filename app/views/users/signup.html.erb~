 <%= select_tag(:committee, options_for_select([["USB",'USB'],["UCV",'UCV'],["UCAB",'UCAB'],["UNIMET",'UNIMET'],["UNITEC",'UNITEC'],["UC",'UC'],["MERIDA",'MERIDA'],["MARACAIBO",'MARACAIBO'],["BARQUISIMETO",'BARQUISIMETO'],["GUAYANA",'GUAYANA'],["MC",'MC']])) %>
