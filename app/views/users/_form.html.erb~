<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if session[:user].role=='Admin'%>	
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
<% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
   <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :area %><br />
    <%= select_tag(:area, options_for_select([["F&L",'F&L'],["ICX",'ICX'],["OGX",'OGX'],["COMM",'COMM'],["OS",'OS'],["TM",'TM'],["ER",'ER']])) %>
  </div>

  <div class="field">
    <%= f.label :committee %><br />
    <%= select_tag(:committee, options_for_select([["USB",'USB'],["UCV",'UCV'],["UCAB",'UCAB'],["UNIMET",'UNIMET'],["UNITEC",'UNITEC'],["UC",'UC'],["MERIDA",'MERIDA'],["MARACAIBO",'MARACAIBO'],["BARQUISIMETO",'BARQUISIMETO'],["GUAYANA",'GUAYANA']])) %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </div>

<% if session[:user].role=='Admin'%>	
  <div class="field">
    <%= f.label :role %><br />
    <%= select_tag(:role, options_for_select([["Administrador",'Admin'],["Miembro",'Member'],["Nuevo",'Nuevo']])) %>
  </div>
<% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
